<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/q3"
    tools:context="com.creativeAI.jisun.hanja.QuizStartActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/top_toolbar" />

        <ImageView
            android:id="@+id/quiz_cha"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/quiz_start"
            android:layout_alignStart="@+id/quiz_start"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="17dp"
            app:srcCompat="@drawable/quiz_cha"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="267dp" />

        <ImageView
            android:id="@+id/quiz_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="42dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/start_btn" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/quiz_start"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:text="시 작 하 기"
            android:textSize="22dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
