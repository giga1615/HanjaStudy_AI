<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/j1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/l2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginTop="95dp"
            app:srcCompat="@drawable/j2" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="39dp"
            app:srcCompat="@drawable/j4" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/birth_layout"
            android:layout_marginStart="9dp"
            android:layout_toEndOf="@+id/imageView4"
            app:srcCompat="@drawable/j4" />

        <ImageView
            android:id="@+id/id_make_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView13"
            android:layout_marginTop="52dp"
            app:srcCompat="@drawable/start_btn" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/birth_layout"
            app:srcCompat="@drawable/j5" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/email"
            android:layout_marginTop="49dp"
            app:srcCompat="@drawable/j5" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView6"
            android:layout_marginTop="53dp"
            app:srcCompat="@drawable/j5" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/auto_login"
            app:srcCompat="@drawable/j3" />

        <EditText
            android:id="@+id/name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/birth_layout"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="9dp"
            android:ems="10"
            android:hint="이름"
            android:inputType="textPersonName"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/nickname"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/name"
            android:layout_alignBottom="@+id/name"
            android:layout_alignStart="@+id/imageView"
            android:ems="10"
            android:hint="닉네임"
            android:inputType="textPersonName"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView6"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="이메일주소"
            android:inputType="textPersonName"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView6"
            android:ems="10"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/pw2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView13"
            android:ems="10"
            android:hint="비밀번호확인"
            android:inputType="textPassword"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/auto_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView14"
            android:layout_marginTop="54dp"
            android:buttonTint="@color/grey"
            android:text="이용약관 동의"
            android:textColor="@color/text_color_secondary_4"
            android:textSize="16dp"
            android:visibility="invisible" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView7"
            android:layout_alignParentEnd="true"
            android:buttonTint="@color/grey"
            android:text="개인정보취급방침 동의"
            android:textColor="@color/text_color_secondary_4"
            android:textSize="16dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/goto_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView7"
            android:layout_toEndOf="@+id/auto_login"
            android:text="이미 회원이신가요?"
            android:textSize="16dp" />

        <RelativeLayout
            android:id="@+id/birth_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView4">

            <Spinner
                android:id="@+id/year4"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/imageView8"
                android:layout_alignTop="@+id/year"
                android:visibility="invisible" />

            <Spinner
                android:id="@+id/year5"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/year"
                android:visibility="invisible" />

            <Spinner
                android:id="@+id/year6"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/month"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="생년월일"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@+id/imageView8"
                android:text="년"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@+id/imageView12"
                android:text="월"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageView15"
                android:text="일"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="91dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/birth"
                app:srcCompat="@drawable/j6" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/year"
                app:srcCompat="@drawable/j7" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/month"
                app:srcCompat="@drawable/j7" />

        </RelativeLayout>

        <TextView
            android:id="@+id/id_make_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView14"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:text="계 정 생 성"
            android:textSize="22dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/y"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="76dp"
            android:layout_marginTop="256dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLength="4"/>

        <EditText
            android:id="@+id/m"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/y"
            android:layout_alignBottom="@+id/y"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/y"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLength="2"/>

        <EditText
            android:id="@+id/d"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/m"
            android:layout_alignBottom="@+id/m"
            android:layout_marginStart="19dp"
            android:layout_toEndOf="@+id/m"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLength="2"/>
    </RelativeLayout>
</RelativeLayout>