<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/information_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <include layout="@layout/top_toolbar" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/relativeLayout2"
            android:layout_marginStart="15dp"
            android:layout_marginTop="69dp"
            android:text="nickname"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/nickname"
            app:srcCompat="@drawable/i1" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/nickname"
            android:layout_below="@+id/nickname"
            android:text="email@naver.com"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/i5" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView11"
            android:layout_marginStart="12dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/i2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/imageView16"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/imageView16"
            android:id="@+id/relativeLayout2">

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/relativeLayout3"
            android:layout_marginTop="164dp"
            android:text="안전한 비밀번호로 내 정보를 보호하세요!!"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:text="* 이전에 사용한 적 없는 비밀번호가 안전합니다."
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:text="* 다른 사이트에서 사용하지 않는 비밀번호를 추천합니다."
            android:textSize="15dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/relativeLayout3">

            <ImageView
                android:id="@+id/change_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="42dp"
                app:srcCompat="@drawable/start_btn" />

            <TextView
                android:id="@+id/login_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/change_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp"
                android:text="변 경 하 기"
                android:textSize="22dp" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="238dp"
                app:srcCompat="@drawable/j5" />

            <ImageView
                android:id="@+id/imageView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/now_pw"
                android:layout_marginTop="50dp"
                app:srcCompat="@drawable/j5" />

            <ImageView
                android:id="@+id/imageView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/new_pw"
                android:layout_marginTop="3dp"
                app:srcCompat="@drawable/j5" />

            <EditText
                android:id="@+id/now_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView18"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="11dp"
                android:ems="10"
                android:hint="현재 비밀번호"
                android:inputType="textPersonName"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/new_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView18"
                android:layout_marginTop="3dp"
                android:hint="새 비밀번호"
                android:inputType="textPersonName"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/new_pw2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView35"
                android:layout_marginTop="3dp"
                android:ems="10"
                android:hint="새 비밀번호 확인"
                android:inputType="textPersonName"
                android:textSize="20dp" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>